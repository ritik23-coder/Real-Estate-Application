<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listrow">
<!--    android:background="@android:color/darker_gray"-->
    <androidx.cardview.widget.CardView
    app:cardCornerRadius ="10dp"
    app:cardElevation ="10dp"
    app:cardUseCompatPadding ="true"
    android:layout_width ="match_parent"
    android:layout_height ="wrap_content">
        <LinearLayout
            android:orientation ="vertical"
            android:layout_width ="match_parent"
            android:layout_height ="match_parent"
            android:id="@+id/cardview"
            android:background="#c9c9c9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        <ImageView
            app:srcCompat="@drawable/defaultuserimage"
            android:id="@+id/cardview_imageview"
            android:layout_height="100dp"
            android:layout_width="150dp" />
        <LinearLayout
            android:orientation ="vertical"
            android:layout_marginLeft ="3dp"
            android:layout_width ="wrap_content"
            android:layout_height ="match_parent"
            android:id="@+id/linearlayout5">
        <TextView
            android:text="TextView"
            android:layout_height="100dp"
            android:id="@+id/cardview_title"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="190dp" />
            <ImageView
                app:srcCompat="@drawable/overflow_image"
                android:id="@+id/cardview_overflow"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_gravity="right"/>

            <CheckBox
                android:text=""
                android:id="@+id/cardview_checkBox"
                android:layout_weight ="1"
                android:layout_width ="match_parent"
                android:layout_height ="match_parent"
                android:gravity="center_vertical|end" />
        </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_description"
                android:textSize="12dp"
                android:textColor="#666666"
                android:layout_weight="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
