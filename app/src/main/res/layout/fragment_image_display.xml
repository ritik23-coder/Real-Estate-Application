<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="580dp"
    android:id="@+id/frag_image_display"
    tools:context="com.SyracuseUniversity.jashwanthreddy.happynest.ImageDisplayFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/propertydetail_image_view_pager"
        android:layout_width="357dp"
        android:layout_height="378dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentEnd="true">

    </androidx.viewpager.widget.ViewPager>

    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Want to contact?"
        android:textColor="@android:color/white"
        android:id="@+id/wanttocontactbutton"
        android:textSize="20dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/propertydetail_image_view_pager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>
    </androidx.core.widget.NestedScrollView>
