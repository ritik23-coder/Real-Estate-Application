<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/large_text" />-->

 <RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/contact_info_layout"
     android:layout_width="match_parent"
     android:layout_height="580dp">

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/beadroomhead"
        android:text="About home "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/beadroomhead"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/beadroomhead"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Bedrooms"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/pricehead"
        android:layout_alignStart="@+id/pricehead" />

    <TextView
        android:id="@+id/pricehead"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"


        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="102dp"
        android:text="Price"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amenitieshead"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Amenities"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/descriptiondata"
        android:layout_alignStart="@+id/textView3" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="150dp"
         android:layout_height="30dp"
         android:layout_alignStart="@+id/textView3"
         android:layout_below="@+id/descriptiondata"
         android:layout_marginTop="11dp"
         android:text="Amenities"
         android:textColor="@color/colorPrimaryDark"
         android:textSize="20dp"
         android:textStyle="bold" />

     <TextView
        android:id="@+id/pricebox"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_alignTop="@+id/pricehead"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/bedrrombox"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/beadroomhead"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/descriptiondata"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView3" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/amenitiesdata"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_below="@+id/amenitieshead"
        android:layout_alignStart="@+id/amenitieshead" />
    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/button2"
        android:layout_below="@+id/cityindetailhomelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

     <TextView
         android:layout_width="150dp"
         android:layout_height="30dp"
         android:textSize="20dp"
         android:textColor="@color/colorPrimaryDark"
         android:textStyle="bold"
         android:text="Address"
         android:layout_below="@+id/amenitiesdata"
         android:layout_alignStart="@+id/amenitiesdata"
         android:layout_marginTop="16dp"
         android:id="@+id/textView4" />

     <TextView
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:textColor="@android:color/black"
         android:id="@+id/addressline1indetailhomelayout"
         android:layout_below="@+id/textView4"
         android:layout_alignStart="@+id/textView4"
         android:layout_marginTop="11dp" />
     <TextView
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:textColor="@android:color/black"
         android:id="@+id/addressline2indetailhomelayout"
         android:layout_below="@+id/addressline1indetailhomelayout"
         android:layout_alignStart="@+id/textView4"
         android:layout_marginTop="11dp" />
     <TextView
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:textSize="20dp"
         android:id="@+id/cityindetailhomelayout"
         android:layout_below="@+id/addressline2indetailhomelayout"
         android:layout_alignStart="@+id/textView4"
         android:layout_marginTop="11dp" />
</RelativeLayout>

</androidx.core.widget.NestedScrollView>
